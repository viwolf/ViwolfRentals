    ViewBag.Title = "Calendario";
    Layout = "~/Areas/Viwolf/Views/Shared/_LayoutReservacion.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8' />
    <link href="~/Areas/Viwolf/Content/js/src/Reservaciones/Content/css/core/main.css" rel="stylesheet" />
    <link href="~/Areas/Viwolf/Content/js/src/Reservaciones/Content/css/daygrid/main.css" rel="stylesheet" />
