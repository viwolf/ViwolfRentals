    <div class="row searchButtons">
        <div class="col col-12 col-md-12">
            <div class="actions pull-right">
                <button type="button" class="btn btn-accion btn-sm btn-amarillo" data-role="tooltip" data-placement="top" title="Nuevo" id="btnNew">
                    <i class="fa fa-file-text display-block fa-2x" />
                    Nuevo
                </button>

                <button type="button" class="margin-left-4px btn btn-accion btn-sm btn-amarillo padding-left-2prc"
                        data-role="tooltip" data-placement="top" title="Actualizar" id="btnCheck">
                    <i class="fa fa-edit display-block fa-2x" />
                    Editar
                </button>
            </div>
        </div>
    </div>

    <div class="row">
        <article class="col col-12 col-md-12 col-lg-12 sortable-grid ui-sortable">
            <div class="jarviswidget jarviswidget-sortable" id="wid-id-1" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false" role="widget">
                <header role="heading">
                    <span class="widget-icon"> <i class="fa fa-search"></i> </span>
                    <h2 class="zona-activa-accion-titulo">Parámetros de búsqueda</h2>
                    <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
                </header>

                <div class="collapseArea" role="content">
                    <div class="widget-body">
                        <form id="formSearch" name="formSearch" class="smart-form paddingT-0px zona-activa-accion">
                            <fieldset class="zona-activa-accion">
                                <div class="row">
                                    <div class="inline-group">
                                        <div class="col col-3 col-md-3">
                                            <label for="sPais" class="label">País</label>
                                            <label class="input">
                                                <input type="text" id="sPais" autofocus name="sPais" title="País" />
                                            </label>
                                        </div>

                                        <div class="col col-3 col-md-3 margin-left-minus-2prc">
                                            <label for="sBodega" class="label">Bodega</label>
                                            <label class="input">
                                                <input type="text" class="" id="sBodega" name="sBodega" title="Nombre de la Bodega" />
                                            </label>
                                        </div>

                                        <div class="col col-3 col-md-3 margin-left-minus-2prc">
                                            <label for="sObservaciones" class="label">Observaciones</label>
                                            <label class="input">
                                                <input type="text" id="sObservaciones" name="sObservaciones" title="Observaciones" />
                                            </label>
                                        </div>

                                        <div class="col col-2 col-md-2 margin-left-minus-2prc">
                                            <label for="sActivo" class="label">
                                                Estado <span id="idEstadoCheck">(Activo)</span>
                                            </label>
                                            <label class="checkbox">
                                                <input type="checkbox" id="sActivo" name="sActivo" title="Activo"><i class="margin-left-2em"></i>
                                            </label>
                                        </div>

                                        <div class="col col-1 col-md-1">
                                            <label for="" class="label">&nbsp;</label>
                                            <button type="button" id="btnSearch" class="btn btn-success btn-accion-buscar" data-role="tooltip" title="Buscar">
                                                <i class="fa fa fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>

            <div class="jarviswidget jarviswidget-sortable" id="wid-id-2" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false" role="widget">
                <header role="heading">
                    <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                    <h2>LISTA DE RESULTADO</h2>
                    <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
                </header>

                <div class="collapseArea" role="content">
                    <div class="widget-body">
                        <div class="row">
                            <div class="col col-12 col-md-12">
                                <table id="tableList" class="table table-striped table-hover dt-responsive" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>ID</th>
                                            <th>Bodega</th>
                                            <th>Pa&iacute;s</th>
                                            <th>Estado</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </article>
    </div>
</section>