
@{
    ViewBag.Title = "Gastos";
    Layout = "~/Areas/Viwolf/Views/Shared/_LayoutReservacion.cshtml";
}

<!DOCTYPE html>

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>@ViewBag.Title - Control de Gastos</title>
    @Styles.Render("~/bundles/Estilo/ViwolfRentalsReservaciones")

    <!-- Estilo datepicker-->
    <link href="https://code.jquery.com/ui/1.10.4/themes/ui-lightness/jquery-ui.css" rel="stylesheet">

    <!-- Estilo datatable-->
    <link href="https://cdn.datatables.net/responsive/2.1.0/css/responsive.dataTables.min.css" rel="stylesheet" media="screen">
    <link href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" rel="stylesheet" media="screen">

    <!-- TimePicker CSS-->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
    <link href="https://code.jquery.com/ui/1.10.4/themes/ui-lightness/jquery-ui.css" rel="stylesheet">

    <script type="text/javascript">
        var usuarioLogueado = '@ViewBag.Usuario';
        var idUsuarioLogueado = '@ViewBag.IdUsuario'
    </script>
</head>

<body>
    <div class="page-wrapper bg-gra-03 p-t-45 p-b-50">
        <div class="wrapper wrapper--w790">
            <div class="card card-5">
                <div class="card-heading">
                    <h2 class="title"> Control de Gastos</h2>
                </div>
                <div class="card-body">
                    @*<form id="formPagoComision" name="formPagoComision" class="smart-form">*@
                    <fieldset>
                        <div class="row">
                            <div class="col col-12 col-md-12">
                                <div class="form-row m-b-55">
                                    <div class="col-3">
                                        <input id="txtDescripcionGasto" class="input--style-5" type="text" name="Descripcion">
                                        <label class="label--desc">Descripcion Gasto</label>
                                    </div>
                                    <div class="col-2">
                                        <input id="txtMontoGasto" class="input--style-5" type="text" name="Monto">
                                        <label class="label--desc">Monto Gasto</label>
                                    </div>
                                    <div class="col-2">
                                        <input id="txtNumeroFacturaGasto" class="input--style-5" type="text" name="Numero Factura">
                                        <label class="label--desc">Numero Factura Gasto</label>
                                    </div>
                                    <div class="col-2">
                                        <div class="input-group-desc">
                                            <input id="txtFacturaGasto" type="file" name="FacturaGasto">
                                            <label class="label--desc">Factura</label>
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="input-group-desc">
                                            <img id="imgFacturaGasto" src="" width="150" height="150" alt="Vista Previa Factura...">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class=" actions pull-right">
                                    <button type="button" id="btnAgregarGasto" class="btn btn-accion btn--radius-2 btn-primary btn-sm" data-role="tooltip" title="Buscar Reservacion">
                                        <i class="fa fa-search"></i> Agregar
                                    </button>

                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col col-12 col-md-12">
                                <div id="divDataGastos" class="col-md-12" style="overflow-x: auto">
                                    <table id="tblDataGastos" class="table table-striped table-hover dt-responsive" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th>Descripcion</th>
                                                <th>Monto</th>
                                                <th>Numero Factura</th>
                                                <th>Imagen</th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col col-12 col-md-12">
                                <div class="form-row m-b-55">
                                    <div class="col-3">
                                      
                                    </div>
                                    <div class="col-2">
                                       
                                    </div>
                                    <div class="col-2">
                                       
                                    </div>
                                    <div class="col-2">
                                        <div class="input-group-desc">
                                            
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="input-group-desc">
                                            <input style="color:red; font-weight:bold; text-align:center" disabled id="txtTotalGastos" class="input--style-5" type="text" name="Total Gastos">
                                            <label style="font-weight:bold" class="label--desc">Total Gastos</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>



                   

                        <br />
                        <div class="row">
                            <div class="col-md-12">
                                <div class=" actions pull-right">
                                    <button type="button" id="btnGuardarGastos" class="btn btn-accion btn--radius-2 btn-primary btn-sm" data-role="tooltip" title="Guardar Gastos">
                                        Guardar Gastos
                                    </button>
                                </div>
                            </div>
                        </div>

                    </fieldset>
                   
                </div>
            </div>
        </div>
    </div>
</body>
@Scripts.Render("~/bundles/Content")
@Scripts.Render("~/bundles/DataTables")



<script src="~/Areas/Viwolf/Content/js/src/Facturacion/ControlGastos.js"></script>