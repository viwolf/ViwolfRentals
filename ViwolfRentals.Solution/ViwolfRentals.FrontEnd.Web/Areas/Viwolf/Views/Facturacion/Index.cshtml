
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Viwolf/Views/Shared/_LayoutReservacion.cshtml";
}


<!DOCTYPE html>

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>@ViewBag.Title - Facturacion de Contratos</title>
    @Styles.Render("~/bundles/Estilo/ViwolfRentalsReservaciones")

    <!-- Estilo datepicker-->
    <link href="https://code.jquery.com/ui/1.10.4/themes/ui-lightness/jquery-ui.css" rel="stylesheet">

    <!-- Estilo datatable-->
    <link href="https://cdn.datatables.net/responsive/2.1.0/css/responsive.dataTables.min.css" rel="stylesheet" media="screen">
    <link href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" rel="stylesheet" media="screen">

    <script type="text/javascript">
        var usuarioLogueado = '@ViewBag.Usuario';
        var idUsuarioLogueado = '@ViewBag.IdUsuario'
    </script>
</head>

<body>
    <div class="page-wrapper bg-gra-03 p-t-45 p-b-50">
        <div class="wrapper wrapper--w790">
            <div class="card card-5">
                <div class="card-heading">
                    <h2 class="title">Pago de Comisiones</h2>
                </div>
                <div class="card-body">
                    <form id="formPagoComision" name="formPagoComision" class="smart-form">
                        <fieldset>
                            <div class="row">
                                <div class="col col-12 col-md-12">
                                    <div class="form-row m-b-55">
                                        <div class="col-2">
                                            <input id="txtNumroContrato" class="input--style-5" type="text" name="NumroContrato">
                                            <label class="label--desc">Numero Contrato</label>
                                        </div>
                                        <div class="col-4">
                                            <input id="txtNombreCliente" class="input--style-5" type="text" name="NombreCliente">
                                            <label class="label--desc">Nombre Cliente</label>
                                        </div>
                                        <div class="col-4">
                                            <input id="txtLugarEntrega" class="input--style-5" type="text" name="LugarEntrega">
                                            <label class="label--desc">Hospedaje</label>
                                        </div>
                                        <div class="col-2">
                                            <select id="txtEstadoContrato" class="select--style-5" name="EstadoContrato">
                                            </select>
                                            <label class="label--desc">Estado Contrato</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col col-12 col-md-12">
                                    <div id="divDataComisiones" class="col-md-12" style="overflow-x: auto">
                                        <table id="tblDataComisiones" class="table table-striped table-hover dt-responsive" cellspacing="0" width="100%">
                                            <thead>
                                                <tr>
                                                    <th style="visibility:hidden">IDContrato</th>
                                                    <th style="visibility:hidden">IDReservacion</th>
                                                    <th style="visibility:hidden">IDEstadoContrato</th>
                                                    <th>Numero Contrato </th>
                                                    <th>Nombre del cliente</th>
                                                    <th>Hospedaje</th>
                                                    <th>Estado Contrato</th>
                                                    <th>Total Contrato</th>
                                                    <th><input name="select_all" value="1" type="checkbox"></th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class=" actions pull-right">
                                        <button type="button" id="btnBuscarContratos" class="btn btn-accion btn--radius-2 btn-primary btn-sm" data-role="tooltip" title="Buscar Reservacion">
                                            <i class="fa fa-search"></i> Buscar Contratos
                                        </button>
                                        <button type="button" id="btnFacturar" class="btn btn-accion btn--radius-2 btn-primary btn-sm" data-role="tooltip" title="GenerarContrato">
                                            Facturar 
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
@Scripts.Render("~/bundles/Content")
@Scripts.Render("~/bundles/DataTables")



