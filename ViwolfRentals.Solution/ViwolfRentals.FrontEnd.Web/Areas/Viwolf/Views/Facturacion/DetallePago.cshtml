<!-- Form Modal -->
<div id="popupPagarContrato" class="modal fade" role="dialog" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button id="btnSalir" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="lbl_title_create_carts"></h4>
            </div>
            <div class="modal-body modal-bodyEdit modal-scroll">
                <section id="content" class="animated fadeInUp">
                    <form id="formEditVehiculo" name="formResultado" class="">
                        <fieldset>
                            <div class="row">
                                <div class="col-6">
                                    <input disabled value="Monto Total" style="text-align:right; font-size:x-large" id="lblMontoTotal">
                                </div>
                                <div class="col-6">
                                    <input disabled style="text-align:left; font-size:x-large; color:red" id="txtMontoPagarTotal">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col col-12 col-md-12">
                                    <div class="form-row m-b-55">

                                        <div class="col-4">
                                            <div class="input-group-desc">
                                                <select id="txtMoneda" class="select--style-5" name="Moneda">
                                                    <option value="1">USD</option>
                                                    <option value="2">CRC</option>
                                                </select>
                                                <label class="label--desc">Tipo de Moneda</label>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="input-group-desc">
                                                <input style="text-align:right; font-weight:bold" id="txttipocambio" class="input--style-5" type="text" name="Descuento">
                                                <label class="label--desc">Tipo de Cambio</label>
                                            </div>
                                        </div>

                                        <div class="col-4">
                                            <div class="input-group-desc">
                                                <input style="text-align:right; font-weight:bold" id="txtTotalPagar" disabled class="input--style-5" type="text" name="txtTotalPagar">
                                                <label class="label--desc">Saldo Pendiente</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col col-12 col-md-12">
                                    <div class="form-row m-b-55">
                                        <div class="col-3">
                                            <div class="input-group-desc">
                                                <select id="txtTipoPago" class="select--style-5" name="TipoPago">
                                                    <option value="1">Efectivo</option>
                                                    <option value="2">Tarjeta</option>
                                                    <option value="3">Transferencia</option>
                                                </select>
                                                <label class="label--desc">Forma de Pago</label>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="input-group-desc">
                                                <input disabled style="text-align:right; font-weight:bold" id="TxtReferencia" class="input--style-5" type="text" name="Referencia">
                                                <label class="label--desc">Nº Referencia Voucher</label>
                                            </div>
                                        </div>

                                        <div class="col-3">
                                            <div class="input-group-desc">
                                                <input style="text-align:right; font-weight:bold" id="txtMonto" class="input--style-5" type="text" name="Monto">
                                                <label class="label--desc">Paga Con/Abona</label>
                                            </div>
                                        </div>

                                        <div class="col-3">
                                            <div class="input-group-desc">
                                                <input style="text-align:right; font-weight:bold" id="txtCambio" disabled class="input--style-5" type="text" name="txtTotalPagar">
                                                <label class="label--desc">Total Cambio</label>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class=" actions pull-right">
                                        <button type="button" id="btnAgregar" class="btn btn-accion btn--radius-2 btn-primary btn-sm" data-role="tooltip" title="Agregar">
                                            Abonar
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col col-12 col-md-12">
                                    <div id="divDataDetallePagos" class="col-md-12" style="overflow-x: auto">
                                        <table id="tblDataDetallePagos" class="table table-striped table-hover dt-responsive" cellspacing="0" width="100%">
                                            <thead>
                                                <tr>
                                                    <th>IDFormaPago</th>
                                                    <th>Forma Pago</th>
                                                    <th>Referencia</th>
                                                    <th>Monto</th>
                                                   
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-12">
                                    <div class=" actions pull-right">
                                        <button type="button" id="btnLimpiar" class="btn btn-accion btn--radius-2 btn-primary btn-sm" data-role="tooltip" title="Agregar">
                                            Limpiar
                                        </button>
                                        <button type="button" id="btnRegresar" class="btn btn-accion btn--radius-2 btn-primary btn-sm" data-role="tooltip" title="Agregar">
                                            Regresar
                                        </button>
                                        <button type="button" id="btnFacturarContrato" class="btn btn-accion btn--radius-2 btn-primary btn-sm" data-role="tooltip" title="Facturar">
                                            Guardar
                                        </button>
                                    </div>
                                </div>
                            </div>

                        </fieldset>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>


